/*  搜索列表  */

.m-list {
  padding: 20rpx;
}

.m-list .item {
  display: flex;
  align-items: flex-start;
  border: 1px solid #efeff4;
  height: 150rpx;
  background-color: rgba(240, 240, 240, 0.6);
}

.m-list .item:nth-child(n+1) {
  margin-top: 20rpx;
}

.m-list .item image {
  width: 100%;
  height: 100%;
}

.m-list .item-hd {
  flex-basis: 150rpx;
  height: 100%;
  margin-right: 20rpx;
}

.m-list .item-bd {
  display: flex;
  align-items: center;
  height: 100%;
  flex: 1;
}

.m-list .item-bd .content {
  flex: 1;
}

.m-list .item-bd .icon-bx {
  flex-basis: 80rpx;
}

.m-list .tip {
  color: #cad3d7;
  text-align: center;
}
