.g-mn{
  width: 95%;
  margin:  0 auto;
}
.form{
  width: 100%;
  margin: 0 auto;
}
textarea{
  background-color: #f3f2f1;
  color: #888;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 4px 10px;
}
.u-btn{
  background-color: #f3f2f1;
  color: #888;
  display: inline-block;
  padding: 2px 10px;
}
.u-btn-launch{
  margin-top: 4px;
}

.c-list{
  width: 100%;
  box-sizing: border-box;
  margin-top: 30px;
}
.c-list .title{
  position: relative;
  display: inline-block;
  padding-bottom: 10px;
}
.c-list .title::after{
  content: "";
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 2px;
  width: 100%;
  background-color: #277de2;
}
.c-list .itm{
  display: flex;
  border-top: 1px solid #ddd;
  padding: 20px 0;

}
.c-list .itm image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
}
.c-list .itm>view{
  flex: 1;
}

.flex-bx{
  display: flex;
}
.flex-bx:nth-child(n+2){
  margin-top: 10px;
}
.flex-bx>view:nth-child(1){
  flex: 1;
}